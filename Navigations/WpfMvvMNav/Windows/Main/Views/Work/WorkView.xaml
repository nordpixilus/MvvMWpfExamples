<UserControl x:Class="WpfMvvMNav.Windows.Main.Views.Work.WorkView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:WpfMvvMNav.Windows.Main.Views.Work"             
             d:DataContext="{d:DesignInstance Type=vm:WorkViewModel, IsDesignTimeCreatable=True}"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <Grid>
        <Label Content="{Binding Path=TextLabel}"
                  HorizontalAlignment="Left"
                  Margin="98,186,0,0"
                  VerticalAlignment="Top"
                  Width="96" FontSize="16"/>

        <Button Content="{Binding Path=TextButton}"
                   Command="{Binding GoToHomeViewCommand}"
                   HorizontalAlignment="Left"
                   Margin="22,260,0,0"
                   VerticalAlignment="Top"
                   Width="230" Height="54"
                   FontSize="16"/>

    </Grid>

</UserControl>
